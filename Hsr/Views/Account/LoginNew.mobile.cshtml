@using Hsr
@using Hsr.App_Start
@{
    Layout = null;
}
@model Hsr.Model.Models.LoginModel
<!DOCTYPE html>
<html data-role="none">
<head>
  <meta charset="UTF-8">
    <title>登陆</title>
    @Styles.Render(BundleConfig.LoginStylePath)
 
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	 
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width">
</head>
    <body>
        <section class="login-form-wrap">
            <h1>标题</h1>
	     
            <form class="login-form"  action="@Url.Action("Login","Account")" id="subForm" method="POST">
                @Html.AntiForgeryToken()
	             
                @Html.TextBoxFor(m => m.UserName, new { id = "name",required="required",placeholder="用户名"})

                <input type="password" name="Password" required placeholder="密码">
               
                <input type="submit" value="登陆" id="loginBtn" data-role="none">
                @Html.ValidationSummary()
            </form>
        </section>
 
    </body>

        @Styles.Render("/Content/hint")
       
        @Scripts.Render("~/bundles/jquery")
        
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jqueryMobile")
        @Scripts.Render(BundleConfig.Md5ScriptPath)
        @Styles.Render(BundleConfig.MessageStylePath)
    @Scripts.Render(BundleConfig.MessageJsPath)
    <script>
        $(function () {

            $.mobile.ajaxEnabled = false;
            $('#loginBtn').click(function (event) {
                 
                var pwd = $('input[type="password"]').val();
                if (pwd) {
                    $('input[type="password"]').val($.md5(pwd));
                }
               
            }
            );
        });
    </script>
</html>